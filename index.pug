doctype html
html(lang='en')
  head
    title Hugo theme
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet', href='libs/bootstrap/css/bootstrap.min.css')
    link(rel="stylesheet", href="styles/style.css")
    
  body
    header.container-fluid
      nav.navbar.navbar-light.bg-light.fixed-top.top_menu
        .container.top_menu_container.i_p0
          .col.d-flex.top_menu_social
            a(href="#").fa.fa-twitter
            a(href="#").fa.fa-facebook
            a(href="#").fa.fa-cloud
          .col.d-flex.top_menu_logo
            a(href="#")
              img(src="img/logo.png", alt="LOGO")
          .col.d-flex.top_menu_button
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarToggleExternalContent', aria-controls='navbarToggleExternalContent', aria-expanded='false', aria-label='Toggle navigation')
              i.fa.fa-bars.fa-lg(aria-hidden='true')
      #navbarToggleExternalContent.collapse.fixed-top
        .bg-light
          ul.nav
            li.nav-item
              a.nav-link.active(href='#') Active
            li.nav-item
              a.nav-link(href='#') Link
            li.nav-item
              a.nav-link(href='#') Link
            li.nav-item
              a.nav-link.disabled(href='#') Disabled
    section.half_section.container-fluid.album_section
      .container.wide_container.i_p0
        .row
          article.col-sm-12.col-md-6.d-flex.i_pad
            h2 Featured Album
            p
              | Check out my newest Music Albums. You can easily purchase our music albums or gifts for your friends via 
              a(href='#') iTunes
              |  or  
              a(href='#') Google Play
            .apple_google.d-flex
              a(href="#")
                img(src="img/apple.png", alt="Apple Store")
              a(href="#")
                img(src="img/google.png", alt="Google Market")
          .col-sm-12.col-md-6.album_container.i_p0.i_pad
            .album_container_cover.d-flex
              .album_pic
    section.half_section.container-fluid.video_section
      .container.wide_container.i_p0
        .row
          .col-sm-12.col-md-6.album_container.i_p0.i_pad
          article.col-sm-12.col-md-6.d-flex.i_pad
            h2 The Beat (Official MV)
            p
              | Music video by Mirotic Artist performing The Beat. Available now on iTunes: 
              a(href='#') http://smarturl.it/HiTunes?IQid=yt 
              br
              |  (c) 2015 DZOAN Entertainment International Limited.
              
            .follow_us.d-flex.flex-column
              h4 Follow Us!
              .follow_us_links.d-flex
                a(href="#") Facebook
                a(href="#") Twitter
                a(href="#") Youtube
                a(href="#") Vimeo












